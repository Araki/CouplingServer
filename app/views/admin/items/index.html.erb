<% content_for :title do %>アイテム管理<% end %>
<%= link_to new_admin_item_path, :class => "btn" do %>
  <i class="icon-pencil"></i><strong>登録</strong>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>アイテム名</th>
      <th>プロダクトID</th>
      <th>ポイント</th>
      <th>販売数</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
<% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.title %></td>
      <td><%= item.pid %></td>
      <td><%= item.point %></td>
      <td><%= item.receipts_count %></td>
      <td>
        <%= link_to "詳細", admin_item_path(item) %> |
        <%= link_to "編集", edit_admin_item_path(item) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
<%= paginate @items %>