<% content_for :title do %>画像詳細<% end %>

<div class="row">
  <div class="span8 offset3 well">
    <h3><%= yield :title %></h3>
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>ID</td>
          <td><%= @image.id %></td>
        </tr>
        <tr>
          <td>メンバーID</td>
          <td><%= @image.member_id %></td>
        </tr>
        <tr>
          <td>メイン画像</td>
          <td><%= @image.is_main %></td>
        </tr>
        <tr>
          <td>作成日時</td>
          <td><%= @image.created_at %></td>
        </tr>
        <tr>
          <td>画像</td>
          <td><%= image_tag "#{@image.url}" %></td>
        </tr>
      </tbody>
    </table>
    <div class="pagination-centered">
      <%= link_to [:admin, @image], :confirm => '画像を削除しますか?', :class => "btn btn-danger", :method => :delete do %><i class="icon-trash icon-white"></i>削除<% end %>
      <%= link_to "戻る", admin_images_path, :class => "btn" %>
    </div>
  </div>
</div>
