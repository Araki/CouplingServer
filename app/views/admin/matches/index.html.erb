<% content_for :title do %>マッチしたユーザー<% end %>
<div class="bdnavi">
  <ul class="breadcrumb">
    <li><%= link_to "#{@user.profile.nickname}", admin_user_path(@user) %> &gt;</li>
    <li><%= yield :title =%></li>
  </ul>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>ニックネーム</th>
      <th>性別</th>
      <th>年齢</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.id %></td>
          <td><%= profile.nickname %></td>
          <td><%= profile.gender %></td>
          <td><%= profile.age %></td>
          <td>
            <%= link_to "詳細", admin_profile_path(profile) %> |
            <%= link_to "編集", edit_admin_profile_path(profile) %> |
            <%= link_to "マッチを解除", admin_user_match_path(@user, profile), :confirm => 'マッチを解除しますか?', :method=> :delete %> |
            <%= link_to "トーク", admin_user_match_messages_path(@user, profile) %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @profiles %>