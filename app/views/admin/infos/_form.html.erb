<div class="span8 offset2 well">
<%= form_for([:admin, @info], :html => {:class => "form-horizontal well"}) do |f| %>
  <fieldset>
    <legend><%= yield :title %></legend>
    <% if @info.errors.any? %>
      <ul>
        <% @info.errors.full_messages.each do |msg| %>
          <li class="errorMsg"><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="control-group <%= 'error' if f.object.errors['target_id'].present? %>">
      <%= f.label :target_id, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :target_id, :class => "input-xlarge", :readonly => true, :required => "required", :maxlength => 10 %>
      </div>
    </div>
    <div class="control-group <%= 'error' if f.object.errors['body'].present? %>">
      <%= f.label :body, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :body, :class => "input-xlarge", :required => "required"%>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit(nil, :class => "btn btn-primary", :id => "submitBtn") %>
      <%= link_to_function "戻る", "history.back()", :class => "btn" %>
    </div>
  </fieldset>
<% end %>
