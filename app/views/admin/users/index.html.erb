<% content_for :title do %>ユーザー管理<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>ステータス</th>
      <th>Facebook ID</th>
      <th>Email</th>
      <th>ポイント</th>
      <th>最終ログイン</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.status %></td>
      <td><%= user.facebook_id %></td>
      <td><%= user.email %></td>
      <td><%= user.point %></td>
      <td><%= user.last_login_at %></td>
      <td>
        <%= link_to "詳細", admin_user_path(user) %> |
        <%= link_to "編集", edit_admin_user_path(user) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
<%= paginate @users %>